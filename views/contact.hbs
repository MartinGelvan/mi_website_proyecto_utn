<head>
    <link rel="stylesheet" href="stylesheets/contacto.css">
</head>

<div class="holder" data-aos="fade-up">
    <div class="contacto">
        <h2>Contact</h2>
        <form action="/contact" method="post">
            <p>
                <label for="">Name</label>
                <input type="text" name="nombre" placeholder="Ej Juan" required>
            </p>
            <p>
                <label for="">Email</label>
                <input type="email" name="email" placeholder="Ej Juan@gmail.com" required>
            </p>
            <p>
                <label for="">Tel</label>
                <input type="text" name="tel">
            </p>
            <p>
                <label for="">Message</label>
                <textarea name="comentarios" id=""></textarea>
            </p>
            <p>
                <input type="submit" value="Enviar">
            </p 
        </form>
        <p>{{message}}</p>
    </div>
    <div class="informacion">
        <h2>Info</h2>
        <ul>
            <li>Mail: martingelvan@gmail.com</li>
        </ul>
    </div>
</div>